{
    "name": "@mabesi/react-components",
    "version": "0.1.3",
    "description": "Modern React component library with TypeScript support - DynamicForm, DataTable, Modal, and more",
    "author": "Plinio Mabesi",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mabesi/react-components"
    },
    "homepage": "https://github.com/mabesi/react-components#readme",
    "bugs": {
        "url": "https://github.com/mabesi/react-components/issues"
    },
    "keywords": [
        "react",
        "components",
        "typescript",
        "dynamic-form",
        "form-builder",
        "ui-components",
        "react-library"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./styles.css": "./dist/index.css"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "example": "vite --config vite.config.example.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
        "typecheck": "tsc --noEmit",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.1.6",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.10.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "globals": "^16.5.0",
        "happy-dom": "^20.0.11",
        "prettier": "^3.3.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "size-limit": "^11.1.6",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vite": "^6.0.1",
        "vitest": "^4.0.15"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 80,
        "arrowParens": "avoid"
    },
    "size-limit": [
        {
            "path": "dist/index.js",
            "limit": "15 KB"
        },
        {
            "path": "dist/index.mjs",
            "limit": "15 KB"
        }
    ]
}